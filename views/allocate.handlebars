<body>
    <h1>Total Phone Bill Price Plan</h1>
    <h2>Allocate Price Plan to Username</h2>
    <form action="/UserDetails" method="POST">
        <div class="Usertextbox">
            <label class="RG" for="fReg">Username</label>
            <input type="text" name="Entername" value="" placeholder="enter user name (e.g Wiseman, John)" class="fReg">
        </div>
        <div class="Username">
            <label class="townText" for="towns">Price Plan</label>
            <select id="banks" name="planType" class="priceplan_name" aria-label="State">
                <option value="">Select Price Plan</option>
                <option value="sms100">SMS 100</option>
                <option value="sms200">SMS 200</option>
                <option value="call weekly">Call Weekly</option>
            </select>
        </div>
        <div class="price_add">
            <button class="button-primary AddButtn" type="submit" name="button">Allocate</button>
        </div>
    </form>
    <form form action="/reset" method="POST">
        <div class="price_add">
            <button class="button-primary resetButtn" type="submit" name="button">Reset Users</button>
        </div>
    </form>
