    <table>
        <tr>
            <td>SMS 100</td>
         <td><a href="viewusers/sms100">view users</a></td>
        </tr>
        <tr>
            <td>SMS 200</td>
        <td><a href="viewusers/sms200">view users</a></td>
        </tr>
        <tr>
            <td>CALL WEEKLY</td>
         <td><a href="viewusers/call weekly">view users</a></td>
        </tr>
    </table>
    </div>

